<!DOCTYPE html>
<html>
  <%= render 'layouts/head' %>

  <body>
    <div class="container">
      <% if !flash.empty? %>
        <% flash.each do |msg_type, msg| %>
          <%= content_tag(:div, msg, class: "alert alert-#{msg_type}") %>
        <% end %>
      <% end %>
      <%= yield %>  
    </div>
  </body>
</html>
