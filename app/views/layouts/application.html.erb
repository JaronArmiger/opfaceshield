<!DOCTYPE html>
<html>
  <%= render 'layouts/head' %>

  <body>
    <%= render 'layouts/header' %>
    <div class="container">
      <div class="dummy"></div>
      <% if !flash.empty? %>
        <% flash.each do |msg_type, msg| %>
          <%= content_tag(:div, msg, class: "alert alert-#{msg_type}") %>
        <% end %>
      <% end %>
      <%= yield %>
      <div class="dummy"></div>
    </div>
    <% if current_user && current_user_account %>
      <%= render 'layouts/icon_bar' %>
    <% end %>
  </body>
</html>
