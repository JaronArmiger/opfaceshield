<% @account = order.account %>
<div class="card">
  <h2 class="card-header">Order #<%= order.id %></h2>
	<li class="list-group-item info-group">
		
		<div class="info">
			
			<span><b>Recipient:</b> <%= @account.institution_name %></span>
			<span><b>Contact Name:</b> <%= @account.contact_first_name %> <%= @account.contact_last_name %></span>
			<span><b>Phone Number:</b> <%= @account.phone_number %></span>
			<span><b>Face Shields:</b> <%= order.num_shields %></span>
			<span><b>Mask Adjusters:</b> <%= order.num_adjusters %></span>
		</div>
		<div class="address info">
			<span><b>Street Address:</b> <%= order.street_address %></span>
			<span><b>City:</b> <%= order.city %></span>
			<span><b>State:</b> <%= order.state %></span>
			<span><b>Zip Code:</b> <%= order.zipcode %></span>
		</div>
	</li>
</div>